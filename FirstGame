import random

choices = ['r', 'p', 's']

choice_meaning = {
    'r': 'Rock',
    's': 'Scissors',
    'p': 'Paper'
}

user_choice = input('Select from Rock, Paper, Scissors: (r, p, s) ')

Robot_choice = random.choice(choices)

if user_choice in choices:
    print(f'Your choice is {choice_meaning[user_choice]}.\n Robot choice is {choice_meaning[Robot_choice]}.')
    # r > s - p > r - s > p
    if user_choice == Robot_choice:
        print('Tie(Mosavi)')
    elif user_choice == 'r' and Robot_choice == 's':
        print('You Won My friend!')
    elif user_choice == 'p' and Robot_choice == 'r':
        print('You Won My friend!')
    elif user_choice == 's' and Robot_choice == 'p':
        print('You Won My friend!')
    else:
        print('You Lost(Always robots will be a winner, you can not HUMAN)!')
else:
    print('Invalid input(you will choice with r, s, p)')
